# Opera GX Configuration Data for Chezmoi
# This file allows users to customize Opera GX settings through chezmoi templates
# Generated by VibeOps browsers role

opera_gx:
  # Performance Limiter Settings
  performance:
    ram_limiter:
      enabled: {{ opera_gx.settings.ram_limiter | lower }}
      limit_mb: {{ opera_gx.settings.ram_limit_mb | default(4096) }}
      auto_mode: true
      strict_mode: true
      notifications: true

    cpu_limiter:
      enabled: {{ opera_gx.settings.cpu_limiter | lower }}
      limit_percent: {{ opera_gx.settings.cpu_limit_percent | default(80) }}
      auto_mode: true
      strict_mode: true
      notifications: true

    network_limiter:
      enabled: {{ opera_gx.settings.network_limiter | lower }}
      download_limit_kbps: {{ opera_gx.settings.network_download_limit_kbps | default(0) }}
      upload_limit_kbps: {{ opera_gx.settings.network_upload_limit_kbps | default(0) }}
      auto_mode: true
      strict_mode: false
      notifications: true

  # Privacy and Security Settings
  privacy:
    protection_enabled: {{ opera_gx.settings.privacy_protection | lower }}
    telemetry_disabled: {{ not (opera_gx.settings.telemetry | default(false)) | lower }}
    tracking_protection: true
    fingerprinting_protection: true
    third_party_cookies_blocked: true
    dns_over_https: true
    dns_provider: "cloudflare"

  # Gaming and GX Features
  gaming:
    gaming_mode: true
    gx_corner: true
    gx_sidebar: true
    workspaces: true
    flow: true
    hot_tabs_killer: true
    memory_saver: true
    tab_sleeping: true
    tab_sleeping_timeout: 300

  # Theme and Appearance
  appearance:
    theme: "{{ opera_gx.settings.theme | default('dark') }}"
    force_dark_pages: true
    developer_mode: true

  # Developer Settings
  developer:
    tools_enabled: {{ opera_gx.settings.developer_tools | default(true) | lower }}
    password_manager_disabled: {{ not (opera_gx.settings.password_manager | default(false)) | lower }}
    sync_disabled: {{ opera_gx.settings.sync_disabled | default(false) | lower }}

  # Extensions
  extensions:
{% for extension in opera_gx.extensions | default([]) %}
    - "{{ extension }}"
{% endfor %}

