{
  "// Opera GX Preferences for Developer Environment": "Generated by VibeOps browsers role",

  "browser": {
    "show_home_button": true,
    "check_default_browser": false,
    "custom_chrome_frame": false
  },

  "bookmark_bar": {
    "show_on_all_tabs": true
  },

  "distribution": {
    "skip_first_run_ui": true,
    "import_bookmarks": false,
    "import_history": false,
    "import_search_engine": false,
    "make_opera_default": false,
    "make_opera_default_for_user": false,
    "verbose_logging": false
  },

  "// Performance and Gaming Features": "Opera GX specific performance settings",
  "gx_ram_limiter_enabled": {{ opera_gx.settings.ram_limiter | lower }},
  "gx_cpu_limiter_enabled": {{ opera_gx.settings.cpu_limiter | lower }},
  "gx_network_limiter_enabled": {{ opera_gx.settings.network_limiter | lower }},
  "gx_performance_optimization": {{ opera_gx.settings.performance_optimization | lower }},
  "gx_gaming_mode": true,
  "gx_sidebar_enabled": true,
  "gx_corner_enabled": true,
  "gx_workspaces_enabled": true,
  "gx_flow_enabled": true,

  "// RAM Limiter Configuration": "Memory usage optimization",
  {% if opera_gx.settings.ram_limiter %}
  "gx_ram_limiter_value": {{ opera_gx.settings.ram_limit_mb | default(4096) }},
  "gx_ram_limiter_auto": true,
  "gx_ram_limiter_strict": true,
  "gx_ram_limiter_notifications": true,
  {% endif %}

  "// CPU Limiter Configuration": "CPU usage optimization",
  {% if opera_gx.settings.cpu_limiter %}
  "gx_cpu_limiter_value": {{ opera_gx.settings.cpu_limit_percent | default(80) }},
  "gx_cpu_limiter_auto": true,
  "gx_cpu_limiter_strict": true,
  "gx_cpu_limiter_notifications": true,
  {% endif %}

  "// Network Limiter Configuration": "Bandwidth optimization",
  {% if opera_gx.settings.network_limiter %}
  "gx_network_limiter_download": {{ opera_gx.settings.network_download_limit_kbps | default(0) }},
  "gx_network_limiter_upload": {{ opera_gx.settings.network_upload_limit_kbps | default(0) }},
  "gx_network_limiter_auto": true,
  "gx_network_limiter_strict": false,
  "gx_network_limiter_notifications": true,
  {% endif %}

  "// Advanced Performance Settings": "Enhanced performance features",
  "gx_force_dark_pages": true,
  "gx_hot_tabs_killer": true,
  "gx_memory_saver": true,
  "gx_battery_saver": false,
  "gx_tab_sleeping": true,
  "gx_tab_sleeping_timeout": 300,
  "gx_background_tab_throttling": true,
  "gx_hardware_acceleration": true,
  "gx_gpu_rasterization": true,
  "gx_smooth_scrolling": true,
  "gx_preload_pages": false,

  "// Theme and Appearance": "Dark theme and visual preferences",
  {% if opera_gx.settings.theme == "dark" %}
  "browser_theme_color": "#1a1a1a",
  "extensions_ui_developer_mode": true,
  {% endif %}

  "// Privacy and Security Settings": "Enhanced privacy for developers",
  "enable_do_not_track": true,
  "safebrowsing_enabled": true,
  "alternate_error_pages_enabled": false,
  "search_suggest_enabled": false,
  "network_prediction_options": 2,
  "metrics_reporting_enabled": {{ opera_gx.settings.telemetry | lower }},
  "usage_stats_enabled": {{ opera_gx.settings.telemetry | lower }},

  "// Enhanced Privacy Settings": "Additional privacy protections",
  {% if opera_gx.settings.privacy_protection %}
  "privacy_sandbox_enabled": false,
  "privacy_sandbox_topics_enabled": false,
  "privacy_sandbox_fledge_enabled": false,
  "privacy_sandbox_ad_measurement_enabled": false,
  "third_party_cookies_blocked": true,
  "tracking_protection_enabled": true,
  "fingerprinting_protection_enabled": true,
  "block_third_party_cookies": true,
  "block_cross_site_tracking": true,
  "dns_over_https_enabled": true,
  "dns_over_https_provider": "cloudflare",
  "webrtc_ip_handling_policy": "default_public_interface_only",
  "referrer_policy": "strict-origin-when-cross-origin",
  {% endif %}

  "// Telemetry and Data Collection": "Minimize data collection",
  "crash_reporting_enabled": {{ opera_gx.settings.telemetry | lower }},
  "metrics_reporting_enabled": {{ opera_gx.settings.telemetry | lower }},
  "usage_stats_enabled": {{ opera_gx.settings.telemetry | lower }},
  "autofill_assistant_enabled": false,
  "password_leak_detection_enabled": false,
  "safe_browsing_extended_reporting_enabled": false,
  "spell_check_service_enabled": false,
  "translate_enabled": false,
  "alternate_error_pages_enabled": false,
  "search_suggest_enabled": false,
  "navigation_error_use_google_online_suggestion": false,
  "background_mode_enabled": false,
  "hardware_acceleration_mode_enabled": true,
  "print_preview_sticky_settings": false,
  "cloud_print_proxy_enabled": false,
  "media_router_enabled": false,
  "webrtc_event_logging_enabled": false,
  "webrtc_text_log_enabled": false,

  "// Search and Navigation": "Developer-friendly defaults",
  "default_search_provider_data": {
    "template_url_data": {
      "short_name": "DuckDuckGo",
      "keyword": "duckduckgo.com",
      "url": "https://duckduckgo.com/?q={searchTerms}",
      "suggestions_url": "",
      "favicon_url": "https://duckduckgo.com/favicon.ico",
      "safe_for_autoreplace": true,
      "input_encodings": ["UTF-8"],
      "date_created": "0",
      "last_modified": "0",
      "created_by_policy": true,
      "usage_count": 0,
      "prepopulate_id": 92,
      "sync_guid": ""
    }
  },

  "// Developer Tools and Extensions": "Development workflow optimization",
  "extensions": {
    "ui": {
      "developer_mode": true
    }
  },

  "// Session and Startup": "Restore previous session",
  "session": {
    "restore_on_startup": 1
  },
  "first_run_tabs": [
    "opera://startpage/"
  ],
  "homepage": "opera://startpage/",
  "homepage_is_newtabpage": true,

  "// Download Settings": "Developer-friendly download behavior",
  "download": {
    "default_directory": "${home}/Downloads",
    "prompt_for_download": false,
    "directory_upgrade": true
  },

  "// Security Settings for Development": "Balance security with development needs",
  "ssl": {
    "error_override_allowed": true
  },
  "profile": {
    "default_content_setting_values": {
      "cookies": 1,
      "images": 1,
      "javascript": 1,
      "popups": 2,
      "geolocation": 2,
      "notifications": 2,
      "media_stream": 2
    }
  },

  "// Final marker": "End of preferences"
}
