{
  "// Opera GX Performance Limiter Configuration": "Generated by VibeOps browsers role",
  "// This file configures Opera GX's performance optimization features": "",

  "performance_limiters": {
    "ram_limiter": {
      "enabled": {{ opera_gx.settings.ram_limiter | lower }},
      {% if opera_gx.settings.ram_limiter %}
      "limit_mb": {{ opera_gx.settings.ram_limit_mb | default(4096) }},
      "auto_mode": true,
      "strict_mode": true,
      "notifications": true,
      "kill_tabs_when_exceeded": true,
      "warning_threshold_percent": 90
      {% endif %}
    },

    "cpu_limiter": {
      "enabled": {{ opera_gx.settings.cpu_limiter | lower }},
      {% if opera_gx.settings.cpu_limiter %}
      "limit_percent": {{ opera_gx.settings.cpu_limit_percent | default(80) }},
      "auto_mode": true,
      "strict_mode": true,
      "notifications": true,
      "throttle_background_tabs": true,
      "warning_threshold_percent": 90
      {% endif %}
    },

    "network_limiter": {
      "enabled": {{ opera_gx.settings.network_limiter | lower }},
      {% if opera_gx.settings.network_limiter %}
      "download_limit_kbps": {{ opera_gx.settings.network_download_limit_kbps | default(0) }},
      "upload_limit_kbps": {{ opera_gx.settings.network_upload_limit_kbps | default(0) }},
      "auto_mode": true,
      "strict_mode": false,
      "notifications": true,
      "pause_downloads_when_exceeded": false
      {% endif %}
    }
  },

  "gaming_optimizations": {
    "gaming_mode": true,
    "hot_tabs_killer": true,
    "memory_saver": true,
    "tab_sleeping": {
      "enabled": true,
      "timeout_seconds": 300,
      "exclude_pinned_tabs": true,
      "exclude_audio_tabs": true
    },
    "background_tab_throttling": true,
    "hardware_acceleration": true,
    "gpu_rasterization": true,
    "smooth_scrolling": true
  },

  "advanced_performance": {
    "preload_pages": false,
    "prefetch_resources": false,
    "background_sync": false,
    "idle_detection": true,
    "memory_pressure_handling": true,
    "tab_discarding": {
      "enabled": true,
      "aggressive_mode": false,
      "memory_threshold_mb": 1024
    }
  },

  "gx_features": {
    "gx_corner": true,
    "gx_sidebar": true,
    "workspaces": true,
    "flow": true,
    "force_dark_pages": true,
    "battery_saver": false
  }
}
